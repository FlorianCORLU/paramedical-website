<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Bienvenue sur le site d'une psychomotricienne diplômée d'État. Découvrez mes formations, accompagnements et tarifs pour un suivi personnalisé." />
    <link rel="stylesheet" href="../public/styles.css">
    <title>Accueil - Psychomotricienne</title>
    
  </head>
  <body class="bg-gray-100 text-gray-900">
    <!-- Conteneur principal -->
    <div class="flex flex-col lg:flex-row-reverse min-h-screen p-6">
      <!-- Bouton d'affichage du panneau de navigation (pour accès via mobile) -->
      <div class="lg:hidden mb-4">
        <button
          id="menu-toggle"
          class="text-3xl text-gray-800"
          aria-label="Ouvrir le menu"
          aria-expanded="false"
        >
          ☰
        </button>
      </div>

      <!-- Navigation pannel -->
      <nav
        class="hidden lg:block lg:w-2/5 transition-opacity duration-1000 opacity-0 lg:opacity-100"
        id="menu"
        aria-hidden="true"
      >
        <ul class="space-y-3">
          <li>
            <a
              href="#presentation"
              class="block p-3 bg-gray-200 rounded-md hover:bg-gray-300"
              >Présentation</a
            >
          </li>
          <li>
            <a
              href="#formations"
              class="block p-3 bg-gray-200 rounded-md hover:bg-gray-300"
              >Formations</a
            >
          </li>
          <li>
            <a
              href="#articles"
              class="block p-3 bg-gray-200 rounded-md hover:bg-gray-300"
              >Partages d’articles</a
            >
          </li>
          <li>
            <a
              href="#tarifs"
              class="block p-3 bg-gray-200 rounded-md hover:bg-gray-300"
              >Accompagnements et tarifs</a
            >
          </li>
          <li>
            <a
              href="#contact"
              class="block p-3 bg-gray-200 rounded-md hover:bg-gray-300"
              >Me contacter</a
            >
          </li>
          <li>
            <a
              href="#mentions"
              class="block p-3 bg-gray-200 rounded-md hover:bg-gray-300"
              >Mentions légales</a
            >
          </li>
        </ul>
      </nav>

      <!-- Main part (Title, Logo...) -->
      <section class="flex flex-col items-center lg:w-3/5 mb-6 lg:mb-0">
        <img src="logo.png" alt="Logo" class="w-24 mb-4" />
        <h1 class="text-2xl font-bold mb-1">Prénom Nom</h1>
        <h2 class="text-lg text-gray-600 mb-4">Psychomotricienne D.E.</h2>
        <img
          src="image-praticienne.jpg"
          alt="Portrait de la praticienne"
          class="w-full max-w-md rounded-lg shadow-lg transition-opacity duration-1000 opacity-0"
          id="portrait"
        />
      </section>
    </div>

    <!-- JavaScript -->
    <script>
      // Fade-in de l'image
      window.addEventListener("load", () => {
        const portrait = document.getElementById("portrait");
        portrait.classList.remove("opacity-0");
        portrait.classList.add("opacity-100");
      });

      // Menu toggle mobile
      const toggleBtn = document.getElementById("menu-toggle");
      const menu = document.getElementById("menu");

      toggleBtn.addEventListener("click", () => {
        menu.classList.toggle("hidden");
        
        // Mise à jour de l'attribut aria-expanded
        const isOpen = menu.classList.contains("hidden");
        toggleBtn.setAttribute("aria-expanded", !isOpen);

        if (menu.classList.contains("opacity-0")) {
          setTimeout(() => {
            menu.classList.remove("opacity-0");
            menu.classList.add("opacity-100");
            menu.setAttribute("aria-hidden", "false"); // Le menu est visible
          }, 100);
        } else {
          menu.classList.remove("opacity-100");
          menu.classList.add("opacity-0");
          menu.setAttribute("aria-hidden", "true"); // Le menu est caché
        }
      });

      // Gestion du focus quand le menu est ouvert
      menu.addEventListener("transitionend", () => {
        if (!menu.classList.contains("hidden")) {
          const firstMenuItem = menu.querySelector("a");
          if (firstMenuItem) {
            firstMenuItem.focus(); // Met le focus sur le premier lien du menu
          }
        }
      });
    </script>
  </body>
</html>
    